<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestiontaller.client.controller.ComponenteFormController">
    <top>
        <Label text="Componente de Serie" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <GridPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Serie:" />
                <TextField fx:id="txtSerie" editable="false" GridPane.columnIndex="1" />
                <Label text="Producto:" GridPane.rowIndex="1" />
                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <TextField fx:id="txtProducto" prefHeight="25.0" prefWidth="250.0" promptText="Seleccione un producto" />
                        <Button fx:id="btnBuscarProducto" mnemonicParsing="false" onAction="#handleBuscarProducto" text="Buscar" />
                    </children>
                </HBox>
                <Label text="Tipo de Material:" GridPane.rowIndex="2" />
                <ComboBox fx:id="cmbTipoMaterial" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Descripción:" GridPane.rowIndex="3" />
                <TextField fx:id="txtDescripcion" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Predeterminado:" GridPane.rowIndex="4" />
                <CheckBox fx:id="chkPredeterminado" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="Notas Técnicas:" GridPane.rowIndex="6" />
                <TextArea fx:id="txtNotasTecnicas" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <Label text="Stock Actual:" GridPane.rowIndex="5" />
                <TextField fx:id="txtStockActual" disable="true" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnGuardar" defaultButton="true" mnemonicParsing="false" onAction="#handleGuardar" text="Guardar" />
                <Button fx:id="btnCancelar" cancelButton="true" mnemonicParsing="false" onAction="#handleCancelar" text="Cancelar" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>