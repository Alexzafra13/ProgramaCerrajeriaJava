<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gestiontaller.client.controller.trabajo.TrabajoListController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="title" text="Gestión de Trabajos">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Cliente:" />
                        <TextField fx:id="txtCliente" promptText="Nombre o código..." HBox.hgrow="ALWAYS" />
                        <Label text="Estado:" />
                        <ComboBox fx:id="cmbEstado" prefWidth="150.0" promptText="Todos" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Desde:" />
                        <DatePicker fx:id="dpDesde" />
                        <Label text="Hasta:" />
                        <DatePicker fx:id="dpHasta" />
                        <Button mnemonicParsing="false" onAction="#handleBuscar" text="Buscar" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tablaTrabajos" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colCodigo" prefWidth="100.0" text="Código" />
                <TableColumn fx:id="colFecha" prefWidth="120.0" text="Fecha" />
                <TableColumn fx:id="colCliente" prefWidth="200.0" text="Cliente" />
                <TableColumn fx:id="colEstado" prefWidth="120.0" text="Estado" />
                <TableColumn fx:id="colPrioridad" prefWidth="100.0" text="Prioridad" />
                <TableColumn fx:id="colAsignado" prefWidth="150.0" text="Asignado a" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <placeholder>
                <Label text="No hay trabajos para mostrar" />
            </placeholder>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnNuevoTrabajo" mnemonicParsing="false" onAction="#handleNuevoTrabajo" text="Nuevo Trabajo" />
                <Button fx:id="btnEditar" disable="true" mnemonicParsing="false" onAction="#handleEditar" text="Editar" />
                <Button fx:id="btnCambiarEstado" disable="true" mnemonicParsing="false" onAction="#handleCambiarEstado" text="Cambiar Estado" />
                <Button fx:id="btnVerDetalles" disable="true" mnemonicParsing="false" onAction="#handleVerDetalles" text="Ver Detalles" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>