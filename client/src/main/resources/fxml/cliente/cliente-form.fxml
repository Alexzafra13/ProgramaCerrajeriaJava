<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label text="Datos del Cliente" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <GridPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Código:" />
                <Label text="Tipo Cliente:" GridPane.rowIndex="1" />
                <Label text="Nombre:" GridPane.rowIndex="2" />
                <Label text="Apellidos:" GridPane.rowIndex="3" />
                <Label text="CIF/NIF:" GridPane.rowIndex="4" />
                <Label text="Dirección:" GridPane.rowIndex="5" />
                <Label text="Teléfono:" GridPane.rowIndex="6" />
                <Label text="Email:" GridPane.rowIndex="7" />
                <Label text="Descuento (%):" GridPane.rowIndex="8" />
                <Label text="Observaciones:" GridPane.rowIndex="9" />
                <TextField fx:id="txtCodigo" GridPane.columnIndex="1" />
                <ComboBox fx:id="cmbTipoCliente" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="txtApellidos" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="txtCifNif" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <TextField fx:id="txtDireccion" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <TextField fx:id="txtTelefono" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                <TextField fx:id="txtDescuento" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                <TextArea fx:id="txtObservaciones" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="9" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" text="Guardar" />
                <Button mnemonicParsing="false" text="Cancelar" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>